<h1>Eat the Burgers</h1>

<ul id="uneaten">
  {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{name}}
        <button class="devour" data-id="{{id}}">
            {{#unless devoured}}Devour!{{/if}}
        </button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<ul id="devoured">
  {{#each burgers}}
    {{#if devoured}}
      {{name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
