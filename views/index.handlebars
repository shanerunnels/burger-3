<h1>Eat the Burgers</h1>
<div class="clearfix">
    <ul id="uneaten">
    {{#each burgers}}
        {{#unless devoured}}
        <li>
            {{name}}
            <button class="devour" data-id="{{id}}">
                {{#unless devoured}}Devour!{{/if}}
            </button>
        </li>
        {{/unless}}
    {{/each}}
    </ul>

    <ul id="devoured">
    {{#each burgers}}
        {{#if devoured}}
        {{name}}
        {{/if}}
    {{/each}}
    </ul>
</div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="newBurger" name="name">
  </div>
  <button type="submit">Submit</button>
</form>
