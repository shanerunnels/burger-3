<h1>Eat the Burgers</h1>
<div class="clearfix list-wrapper">
    <ul id="uneatenList">
    {{#each burgers}}
        {{#unless devoured}}
        <li class="uneaten">
            <p>{{burger_name}}</p>
            <button class="devour" data-id="{{id}}">
                Devour!
            </button>
        </li>
        {{/unless}}
    {{/each}}
    </ul>
